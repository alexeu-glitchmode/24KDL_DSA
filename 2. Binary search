// Bài 1
//insertOrderArray
#include <stdio.h>

void printArray(float arr[], int n){
    for(int i=0; i<n; i++){
        printf("%.2f ", arr[i]);
    }
}


void insertOrderedArray(float arr[], int *n, float value){
    int index = (*n);
    for (int i = 0; i < (*n); i++) {
        if (arr[i] > value) {
            index = i;
            break;
        }
    }
    for (int i = *n; i > index; i--) {
        arr[i] = arr[i - 1];
    }
    arr[index] = value;
    (*n)++;
}

int main(){
    float arr[100];
    int n;
    float value;
    printf("Nhap n: ");
    scanf("%d", &n);
    printf("Nhap mang: ");
    for(int i=0; i<n; i++){
        scanf("%.f", &arr[i]);
    }
    printf("Nhap gia tri can chen: ");
    scanf("%f", &value);
    insertOrderedArray(arr, &n, value);
    printf("Mang sau khi chen: ");
    printArray(arr, n);
    return 0;
}

//orderLinearSearch
#include <stdio.h>

void printArray(float arr[], int n){
    for(int i=0; i<n; i++){
        printf("%.2f ", arr[i]);
    }
}
int orderedLinearArray(float arr[], int n, float value){
    for (int i = 0; i < n; i++) {
        if(arr[i]  == value){
            return i;
        }
        if(arr[i] > value){
            return -1;
        }
    }
    return -1;
}

int main(){
    float arr[100];
    int n;
    float value;
    printf("Nhap n: ");
    scanf("%d", &n);
    printf("Nhap mang: ");
    for(int i=0; i<n; i++){
        scanf("%f", &arr[i]);
    }
    printf("Nhap value: ");
    scanf("%f", &value);
    int check = orderedLinearArray(arr, n, value);
    if (check ==-1){
        printf("Not found");
    }
    else{
        printf("Found %.2f at %d", value, check);
    }
    return 0;
}

//binarySearch
#include <stdio.h>

void printArray(float arr[], int n){
    for(int i=0; i<n; i++){
        printf("%.2f ", arr[i]);
    }
}
int binarySearch(float arr[], int n, float value) {
    int low = 0;
    int up = n-1;
    int mid;
    while (low <= up) {
        mid = (low + up) / 2;
        if (value < arr[mid]) {
            up = mid - 1;
        }
        else if (value > arr[mid]) {
            low = mid + 1;
        }
        else if (value == arr[mid]) {
            return mid;
        }
    }
            return -1;

}

int main(){
    float arr[100];
    int n;
    float value;
    printf("Nhap n: ");
    scanf("%d", &n);
    printf("Nhap mang: ");
    for(int i=0; i<n; i++){
        scanf("%f", &arr[i]);
    }
    printf("Nhap value: ");
    scanf("%f", &value);
    int check = binarySearch(arr, n, value);
    if (check ==-1){
        printf("Not found");
    }
    else{
        printf("Found %.2f at %d", value, check);
    }
    return 0;
}

//Bài 2
#include <stdio.h>
#include <string.h>

int kiemTraChuoiTangDan(char str[], int n){
    for(int i=0; i<n-1; i++){
        if (str[i] > str[i+1]){
            return 0;
        }
    }
    return 1;
}

int orderedLinearString(char str[], int n, char value){
    for (int i = 0; i < n; i++) {
        if(str[i]  == value){
            return i;
        }
        if(str[i] > value){
            return -1;
        }
    }
    return -1;
}

int binarySearch(char str[], int n, char value) {
    int low = 0;
    int up = n-1;
    int mid;
    while (low <= up) {
        mid = (low + up) / 2;
        if (value < str[mid]) {
            up = mid - 1;
        }
        else if (value > str[mid]) {
            low = mid + 1;
        }
        else if (value == str[mid]) {
            return mid;
        }
    }
            return -1;
}


int main(){
    char str[] = "bcdefghijklmnopqrstuvwxyz";
    char value;
    printf("Chuoi ban dau:  ");
    printf("%s\n", str);
    printf("value:");
    scanf(" %c", &value);
    
    int check1 = kiemTraChuoiTangDan(str, strlen(str));
    if (check1 ==0){
        printf("\nChuoi khong tang dan\n");
        return 0;
    }
    else{
        printf("Chuoi tang tan\n");
    }
     
    int check2 = orderedLinearString(str, strlen(str), value);
    if (check2 ==-1){
        printf("Not found\n");
    }
    else{
        printf("Found %c at %d", value, check2);
    }
     int check3 = binarySearch(str, strlen(str), value);
    if (check3==-1){
        printf("Not found\n");
    }
    else{
        printf("\nFound %c at %d", value, check3);
    }
    
    if(check2 == check3){
        printf("\nKet qua cau b va c giong nhau");
    }
    return 0;
}

//Bài 3
#include <stdio.h>
#include <string.h>

char findMissingChar(char str[], int n, int *index) {
    int low = 0;
    int up = n - 1;
    while (low <= up) {
        int mid = (low + up) / 2;
        if (str[mid] == 'a' + mid)
            low = mid + 1;
        else
            up = mid - 1;
    }
    *index = low;
    return 'a' + low;
}

int main() {
    char str[] = "abcdefghijklmnpqrstuvwxyz"; // thiếu 'o'
    int index;
    char missing = findMissingChar(str, strlen(str), &index);

    printf("Chuoi: %s\n", str);
    printf("\n%c at %d is missing!", missing, index);
    printf("\nabcdefghijklmnopqrstuvwxyz");
    return 0;
}
